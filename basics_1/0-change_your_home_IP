#!/usr/bin/env bash
# 0-change_your_home_IP
# Changes localhost and facebook.com resolution

# Backup the current /etc/hosts
cp /etc/hosts /etc/hosts.bak

# Use sed to replace or add entries
# Change localhost to 127.0.0.2
if grep -q "^127.0.0.2" /etc/hosts; then
    sed -i "s/^127.0.0.2.*/127.0.0.2 localhost/" /etc/hosts
else
    echo "127.0.0.2 localhost" >> /etc/hosts
fi

# Change facebook.com to 8.8.8.8
if grep -q "facebook.com" /etc/hosts; then
    sed -i "s/.*facebook.com/8.8.8.8 facebook.com/" /etc/hosts
else
    echo "8.8.8.8 facebook.com" >> /etc/hosts
fi
